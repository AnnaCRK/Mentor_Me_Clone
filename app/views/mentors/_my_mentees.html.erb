<div class="container px-4 mt-4">
  <h2 class="mt-0 mb-4">My Mentee</h2>

  <div class="card-small card-small-green">
    <% if @connection %>
      <%= link_to image_tag('https://via.placeholder.com/75', alt: 'User Avatar', style: 'border-radius: 20px;'), connection_path(@connection) if @connection %>
    <% end %>
    <div class="card-small-infos">
      <% if @connection %>
        <h4><%= @connection.mentee.user.first_name %></h4>
      <% else %>
        <h4><%= link_to 'choose your mentee', mentees_path %></h4>
      <% end %>
    </div>
    <% if @connection %>
      <%= link_to chatroom_path(Chatroom.last) do %>
       <svg xmlns="http://www.w3.org/2000/svg" class="message-icon-mentor" width="34" height="34" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
      <% end %>
      <%= link_to connection_tasks_path(@connection) do %>
        <i class="timeline-icon fa-regular fa-calendar-days"></i>
      <% end %>
    <% end %>
  </div>

  <br>

  <h2 class="mt-0 mb-4"> Previous Mentees</h2>

  <div class="card-small-gray">
    <%= link_to image_tag('https://via.placeholder.com/75', alt: 'User Avatar', style: 'border-radius: 20px;'), connection_path(@connection) if @connection %>
    <div class="card-small-infos">
      <h4 class="gray-username">user name</h4>
      <i class="message-icon-gray fa-regular fa-message fa-2x"></i>
      <i class="timeline-icon-gray fa-regular fa-calendar-days"></i>
    </div>
  </div>

  <div class="card-small-gray">
    <%= link_to image_tag('https://via.placeholder.com/75', alt: 'User Avatar', style: 'border-radius: 20px;'), connection_path(@connection) if @connection %>
    <div class="card-small-infos">
      <h4 class="gray-username">user name</h4>
      <i class="message-icon-gray fa-regular fa-message fa-2x"></i>
      <i class="timeline-icon-gray fa-regular fa-calendar-days"></i>
    </div>
  </div>

  <div class="card-small-gray">
    <%= link_to image_tag('https://via.placeholder.com/75', alt: 'User Avatar', style: 'border-radius: 20px;'), connection_path(@connection) if @connection %>
    <div class="card-small-infos">
      <h4 class="gray-username">user name</h4>
      <i class="message-icon-gray fa-regular fa-message fa-2x"></i>
      <i class="timeline-icon-gray fa-regular fa-calendar-days"></i>
    </div>
  </div>
</div>
