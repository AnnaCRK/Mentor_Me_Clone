<div class="container px-4 mt-4" data-controller='swiper reviews'>

  <!-- The Modal -->
  <% @mentors.each do |mentor| %>
    <div id="myModal" class="modal-container" data-reviews-target="modal" data-mentor-id="<%= mentor.id %>">
      <!-- Modal content -->
      <div class="modal-content">
        <span class="close" data-action="click->reviews#close" data-mentor-id="<%= mentor.id %>">&times;</span>
          <%mentor.reviews.each do |review| %>
            <p><%= review.content %></p>
          <% end %>
      </div>
    </div>
  <% end %>


<div class="swiper mySwiper">
  <div class="swiper-pagination"></div>
  <div class="swiper-wrapper">
    <% @mentors.each do |mentor| %>
      <div class="swiper-slide text-center">

         <%= image_tag mentor.user.avatar_url, class:"avatar-swipe " %>

         <div id="popup-link" class="btn btn-primary" data-action="click->reviews#show" data-mentor-id="<%= mentor.id %>">
          <i class="fas fa-star"></i> View Reviews
        </div>




      <form class="bio mt-4">
        <input class="form-control input_html text-center swipe-input" id="import-input" type="text" placeholder="<%= value=mentor.user.first_name%> <%= value=mentor.user.last_name%>" disabled>
        <input class="form-control input_html text-center swipe-input" id="inputCompany" type="text" placeholder="<%= value=mentor.job_title %>" disabled>
        <input class="form-control input_html text-center swipe-input" id="inputCompany" type="text" placeholder="<%= value=mentor.company %>" disabled>
        <input class="form-control input_html text-center swipe-input" id="inputCompany" type="text" placeholder="<%= value=mentor.user.location %>" disabled></p>
        <textarea class="form-control input_html text-center swipe-input" id="inputCompany" placeholder="<%= mentor.user.bio %>" disabled rows="8" cols="50"></textarea>
        </form>

      </div>
    <% end %>
  </div>

</div>

