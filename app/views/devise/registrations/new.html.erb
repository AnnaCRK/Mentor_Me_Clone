<div class="container px-4 mt-4">

  <h2>Sign up</h2>
    <hr class="mt-0 mb-4">


      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs text-center">
         <%= f.input :first_name,
                      label: false,
                      required: true,
                      autofocus: true,
                      placeholder: "first name",
                      input_html: { autocomplete: "first_name", class:"input_html text-center" }%>
         <%= f.input :last_name,
                      label: false,
                      required: true,
                      autofocus: true,
                      placeholder: "last name",
                      input_html: { autocomplete: "last_name",class:"input_html text-center" }%>
          <%= f.input :email,
                      label: false,
                      required: true,
                      autofocus: true,
                      placeholder: "email",
                      input_html: { autocomplete: "email", class:"input_html text-center" }%>
          <%= f.input :password,
                      label: false,
                      required: true,
                      placeholder: "password",
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class:"input_html text-center" } %>
          <%= f.input :password_confirmation,
                      label: false,
                      placeholder: "password confirmation",
                      required: true,
                      input_html: { autocomplete: "new-password", class:"input_html text-center" } %>


        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-ghost btn-submit row justify-content-center"  %>
        </div>
   <% end %>
 <%= render "devise/shared/links"%>
</div>

</div>
