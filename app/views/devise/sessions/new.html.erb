<div class="container px-4 mt-4">
  <h2>Log in</h2>
    <hr class="mt-0 mb-4">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs text-center">
      <%= f.input :email,
                  label: false,
                  required: false,
                  autofocus: true,
                  placeholder: "email",
                  input_html: { autocomplete: "email", class:"input_html text-center" } %>
      <%= f.input :password,
                  label: false,
                  required: false,
                  placeholder: "********",
                  input_html: { autocomplete: "current-password", class:"input_html text-center" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>


    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-ghost btn-submit row justify-content-center" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
    </div>
</div>
