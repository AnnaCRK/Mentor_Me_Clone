<div class="container px-4">
<br>
  <h2 class="mt-0 mb-4">My Mentor</h2>

  <div class="card-small card-small-green">
    <% if @connection %>
      <%= link_to connection_path(@connection) do %>
        <%= image_tag @connection.mentor.user.avatar_url, class: "avatar-home" %>
      <% end %>
    <% end %>
    <div class="card-small-infos">
      <% if @connection %>
        <h4 class="user-home"><%= @connection.mentor.user.first_name %></h4>
      <% else %>
        <h4><%= link_to 'choose your mentor', mentors_path %></h4>
      <% end %>
    </div>
    <% if @connection %>
      <%= link_to chatroom_path(Chatroom.last) do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="message-icon-gray" width="34" height="34" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
      <% end %>
      <%= link_to connection_tasks_path(@connection) do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="timeline-icon" width="34" height="34" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
      <% end %>
    <% end %>
  </div>

  <%# <br> %>

  <div class="mt-5">
    <h2 class="mt-0 mb-4"> Previous Mentors</h2>

    <% @random_mentors.each do |mentor| %>
      <div class="card-home">
        <%= link_to mentor_path(mentor) do %>
          <%= image_tag mentor.user.avatar_url, class: "avatar-home" %>
        <% end %>
        <div class="card-small-infos">
          <h4 class="gray-username"><%= mentor.user.first_name %></h4>
        </div>
          <svg xmlns="http://www.w3.org/2000/svg" class="message-icon-gray" width="34" height="34" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
                  <svg xmlns="http://www.w3.org/2000/svg" class="timeline-icon" width="34" height="34" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
      </div>
    <% end %>
  </div>

</div>
